@model List<dynamic>

@{
    ViewData["Title"] = "UrbanFlow Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4">Urban Flow Dashboard</h1>
    <p>Sistem de management al traficului</p>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Intersecții Configurate</h3>
        <a asp-controller="Intersection" asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fa fa-plus"></i> + Adaugă Intersecție Nouă
        </a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            <h4>Nu există nicio intersecție configurată.</h4>
            <p>Apasă pe butonul de mai sus pentru a crea prima configurație.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered shadow-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Nume</th>
                        <th>Benzi</th>>
                        <th>Faze</th>
                        <th>Durată implicita</th>
                        <th>ID Hardware</th>
                        <th class="text-center" style="width: 200px;">Acțiuni</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var item in Model)
                    {
                        var element = (System.Text.Json.JsonElement)item;
                        var currentId = element.TryGetProperty("id", out var id) ? id.ToString() : "";
                        var currentName = element.TryGetProperty("name", out var name) ? name.ToString() : "Fără Nume";

                        <tr>
                            <td>@(index++)</td>
                            <td class="font-weight-bold">@currentName</td>
                            <td>
                                <span>
                                    @(element.TryGetProperty("lane_cnt", out var lanes) ? lanes.ToString() : "0") benzi
                                </span>
                            </td>
                            <td>

                                <span>
                                    @(element.TryGetProperty("phase_cnt", out var phases) ? phases.ToString() : "0") faze
                                </span>
                            </td>
                            <td>
                                @(element.TryGetProperty("default_phase_duration_ms", out var dur) ? dur.ToString() : "-") ms
                            </td>
                            <td><small class="text-muted">@currentId</small></td>

                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Intersection" asp-action="Edit" asp-route-id="@currentId" class="btn btn-sm btn-outline-primary">
                                        Reconfigurează
                                    </a>

                                    <form asp-controller="Intersection" asp-action="Delete" method="post" onsubmit="return confirm('Ești sigur că vrei să ștergi intersecția @currentName?');" style="display:inline;">
                                        <input type="hidden" name="id" value="@currentId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            Șterge
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>