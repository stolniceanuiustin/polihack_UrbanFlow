@model List<dynamic>

@{
    ViewData["Title"] = "Dashboard Intersecții";
}

<div class="text-center mb-5">
    <h1 class="display-4">Urban Flow Dashboard</h1>
    <p>Sistem de management al traficului</p>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Intersecții Configurate</h3>
        <a asp-controller="Intersection" asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fa fa-plus"></i> + Adaugă Intersecție Nouă
        </a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            <h4>Nu există nicio intersecție configurată.</h4>
            <p>Apasă pe butonul de mai sus pentru a crea prima configurație.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered shadow-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Nume Intersecție</th>
                        <th>Benzi (Lanes)</th>
                        <th>Faze</th>
                        <th>Durată Default</th>
                        <th>ID Hardware</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int index = 1;
                    }
                    @foreach (var item in Model)
                    {
                        // Folosim JsonElement pentru a accesa proprietatile dinamice
                        var element = (System.Text.Json.JsonElement)item;
                        <tr>
                            <td>@(index++)</td>
                            <td class="font-weight-bold">
                                @(element.TryGetProperty("name", out var name) ? name.ToString() : "Fără Nume")
                            </td>
                            <td>
                                <span class="badge badge-info">
                                    @(element.TryGetProperty("lane_cnt", out var lanes) ? lanes.ToString() : "0") benzi
                                </span>
                            </td>
                            <td>
                                <span class="badge badge-warning">
                                    @(element.TryGetProperty("phase_cnt", out var phases) ? phases.ToString() : "0") faze
                                </span>
                            </td>
                            <td>
                                @(element.TryGetProperty("default_phase_duration_ms", out var dur) ? dur.ToString() : "-") ms
                            </td>
                            <td>
                                <small class="text-muted">
                                    @(element.TryGetProperty("id", out var id) ? id.ToString() : "N/A")
                                </small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>