@model UrbanFlowApp.Models.IntersectionViewModel

<div class="container mt-4">
    <h2>Configurare Intersecție Nouă</h2>

    <form asp-action="Create" method="post" id="mainForm">

        <div class="card mb-3">
            <div class="card-header bg-primary text-white">1. Configurare Generală</div>
            <div class="card-body">
                <div class="form-group">
                    <label>Nume Intersecție</label>
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-info text-white">2. Definire Benzi</div>
            <div class="card-body">
                <div class="form-group">
                    <label>Număr de benzi:</label>
                    <input type="number" id="numLanesInput" class="form-control" min="1" max="16" style="width:100px; display:inline-block">
                    <button type="button" class="btn btn-secondary" onclick="generateLanes()">Generează Benzi</button>
                </div>
                <div id="lanesContainer" class="mt-3"></div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-warning text-dark">3. Conexiuni (Rute)</div>
            <div class="card-body">
                <p class="text-muted">Definiți rutele posibile (ex: Banda 0 -> Banda 3)</p>
                <button type="button" class="btn btn-sm btn-outline-dark mb-2" onclick="addConnection()">+ Adaugă Conexiune</button>
                <div id="connectionsContainer"></div>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-success text-white">4. Faze Semafor</div>
            <div class="card-body">
                <p class="text-muted">Selectați conexiunile active (VERDE) pentru fiecare fază.</p>
                <button type="button" class="btn btn-sm btn-outline-dark mb-2" onclick="addPhase()">+ Adaugă Fază</button>
                <div id="phasesContainer"></div>
            </div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Salvează Intersecția</button>
    </form>
</div>

<script>
    let lanesCount = 0;
    let connectionsCount = 0;
    let phasesCount = 0;

    function generateLanes() {
        const count = document.getElementById('numLanesInput').value;
        const container = document.getElementById('lanesContainer');
        container.innerHTML = ''; 
        lanesCount = count;

        for (let i = 0; i < count; i++) {
            const html = `
                <div class="row mb-2 border-bottom pb-2">
                    <div class="col-md-2">
                        <strong>Banda ID: ${i}</strong>
                        <input type="hidden" name="Lanes[${i}].LocalId" value="${i}" />
                    </div>
                    <div class="col-md-4">
                        <label>Tip:</label>
                        <select name="Lanes[${i}].Type" class="form-control lane-type-select" onchange="updateConnectionDropdowns()">
                            <option value="0">IN (Intrare)</option>
                            <option value="1">OUT (Ieșire)</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <small>Hardware Pins (Opțional)</small>
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" placeholder="Sensor Pin" name="Lanes[${i}].SensorPin" value="-1">
                            <input type="text" class="form-control" placeholder="Red Pin" name="Lanes[${i}].RedPin" value="-1">
                            <input type="text" class="form-control" placeholder="Yellow Pin" name="Lanes[${i}].YellowPin" value="-1">
                            <input type="text" class="form-control" placeholder="Green Pin" name="Lanes[${i}].GreenPin" value="-1">
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', html);
        }
        updateConnectionDropdowns();
    }

    function addConnection() {
        const i = connectionsCount;
        const container = document.getElementById('connectionsContainer');

        let optionsHtml = '';
        for(let j=0; j<lanesCount; j++) {
            optionsHtml += `<option value="${j}">Banda ${j}</option>`;
        }

        const html = `
            <div class="row mb-2 align-items-center connection-row" id="conn_${i}">
                <div class="col-auto"><strong>Conexiunea #${i}</strong></div>
                <input type="hidden" name="Connections[${i}].Id" value="${i}" />

                <div class="col">
                    <label>De la (IN):</label>
                    <select name="Connections[${i}].SourceLaneIdx" class="form-control form-control-sm conn-source">
                        ${optionsHtml}
                    </select>
                </div>
                <div class="col-auto">➡</div>
                <div class="col">
                    <label>Catre (OUT):</label>
                    <select name="Connections[${i}].TargetLaneIdx" class="form-control form-control-sm conn-target">
                        ${optionsHtml}
                    </select>
                </div>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
        connectionsCount++;
        refreshPhaseCheckboxes();
    }

    function addPhase() {
        const pIdx = phasesCount;
        const container = document.getElementById('phasesContainer');

        let checkboxesHtml = `<div class="d-flex flex-wrap" id="phase_checkboxes_${pIdx}">`;
        for(let c=0; c < connectionsCount; c++) {
            checkboxesHtml += `
                <div class="form-check mr-3">
                    <input class="form-check-input" type="checkbox" name="Phases[${pIdx}].ActiveConnectionIndices" value="${c}" id="p${pIdx}_c${c}">
                    <label class="form-check-label" for="p${pIdx}_c${c}">Conex. ${c}</label>
                </div>
            `;
        }
        checkboxesHtml += `</div>`;

        const html = `
            <div class="card mt-2 border-success">
                <div class="card-body p-2">
                    <h6>Faza ${pIdx + 1}</h6>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Durata (ms):</label>
                        <div class="col-sm-3">
                            <input type="number" name="Phases[${pIdx}].DurationMs" class="form-control" value="5000">
                        </div>
                    </div>
                    <strong>Conexiuni Active (Verde):</strong>
                    ${checkboxesHtml}
                </div>
            </div>
        `;
        container.insertAdjacentHTML('beforeend', html);
        phasesCount++;
    }

    function refreshPhaseCheckboxes() {
    }

    function updateConnectionDropdowns() {
    }
</script>